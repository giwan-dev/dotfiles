[user]
name = giwan
email = giwan.dev@gmail.com

[alias]
a = add

b = branch

chp = cherry-pick
chpc = chp --continue
chpa = chp --abort

cl = clone

c = commit
cf = c --no-verify # 커밋 훅을 작동시키지 않고 커밋합니다.
override = commit --amend -C HEAD
fixup = commit --fixup

d = diff
dsum = d --compact-summary # 현재 변경 내역의 요약 정보를 확인합니다.

# log
l = log --pretty='%w(0)%C(dim)%m %C(dim)%an, %cr%Creset%C(auto)%d%n%C(red)%m %C(auto)%h %<(80,mtrunc)%s%Creset%n%w(100, 2, 2)%-b%n'

m = merge
mc = m --continue
ma = m --abort

pl = pull
pla = pl --all -p # 등록된 모든 리모트를 fetch하고, 리모트에서 지워진 브랜치를 로컬에서 제거합니다.

ps = push
psf = ps -f

r = rebase
ri = r -i
rc = r --continue
ra = r --abort
rs = r --skip
ret = r --edit-todo

rs = restore
discard = restore -- . # 현재 작업 중인 내용을 모두 제거합니다.

rvt = revert

s = show

sh = stash
shp = sh pop
shcl = sh clear

sw = switch

gone = ! "git fetch -p && git for-each-ref --format '%(refname:short) %(upstream:track)' | awk '$2 == \"[gone]\" {print $1}' | xargs -r git branch -D"
stat = status

[core]
editor = vim
excludesfile = ~/.gitignore

[log]
abbrevCommit = true

[rebase]
missingCommitsCheck = error
autosquash = true

[pull]
rebase = true

[advice]
statusHints = false

[init]
defaultBranch = main

[github]
user = giwan-dev
